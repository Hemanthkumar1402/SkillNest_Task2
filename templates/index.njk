{% extends "base.njk" %}
{% set page = "home" %}
{% set page = "about" %}
{% set page = "contact" %}


{% block content %}
<style>
  body {
    margin: 0;
    padding-top: 70px;
    background: url("https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=1600&q=80") no-repeat center center fixed;
    background-size: cover;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    color: white;
  }

  .overlay {
    background-color: rgba(0, 0, 0, 0.75);
    min-height: 100vh;
    padding: 80px 20px;
  }

  .header {
    text-align: center;
    margin-bottom: 40px;
  }

  .header h1 {
    font-size: 3rem;
    color: #00ffff;
    font-weight: bold;
  }

  .header p {
    font-size: 1.2rem;
    color: #ccc;
  }

  .skill-card {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 15px;
    padding: 30px;
    text-align: center;
    max-width: 600px;
    margin: auto;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
  }

  .skill-name {
    font-size: 2rem;
    font-weight: bold;
    color: #00ffff;
  }

  .tip {
    margin-top: 15px;
    font-style: italic;
    color: #aaa;
  }

  .link {
    margin-top: 20px;
  }

  .btn-refresh {
    margin-top: 30px;
    background-color: #00ffff;
    color: #000;
    border: none;
  }

  .btn-refresh:hover {
    background-color: #00d0d0;
  }

  footer {
    text-align: center;
    padding: 20px;
    background-color: #111;
    color: #aaa;
    margin-top: 60px;
  }
</style>

<div class="overlay">
  <div class="header">
    <h1>SkillNest</h1>
    <p>Master trending skills in just 5 minutes a day âœ¨</p>
  </div>

  <div class="skill-card">
    <div id="skillName" class="skill-name">Git & GitHub</div>
    <div id="tip" class="tip">
      Version control is a must-have skill for every developer.
    </div>
    <div id="resource" class="link">
      <a
        href="https://www.youtube.com/watch?v=RGOj5yH7evk"
        target="_blank"
        class="btn btn-outline-light"
      >Watch Intro Video</a>
    </div>
    <button onclick="generateSkill()" class="btn btn-refresh">
      Show Me Another Skill
    </button>
  </div>
</div>

<footer>
  <p class="mb-0">
    &copy; 2025 K.Hemanth Kumar |
    <a
      href="https://github.com/Hemanthkumar1402"
      target="_blank"
      style="color: #00ffff; text-decoration: none"
    >GitHub</a>
  </p>
</footer>

<script>
  const skills = [
    {
      name: "Git & GitHub",
      tip: "Version control is a must-have skill for every developer.",
      link: "https://www.youtube.com/watch?v=RGOj5yH7evk",
    },
    {
      name: "Responsive Design",
      tip: "Design for all screen sizes using Flexbox and media queries.",
      link: "https://www.youtube.com/watch?v=srvUrASNj0s",
    },
    {
      name: "JavaScript ES6",
      tip: "Master arrow functions, destructuring, and more!",
      link: "https://www.youtube.com/watch?v=NCwa_xi0Uuc",
    },
    {
      name: "Node.js Basics",
      tip: "Learn how to build backend servers using JavaScript.",
      link: "https://www.youtube.com/watch?v=TlB_eWDSMt4",
    },
    {
      name: "UI/UX Design",
      tip: "Good design solves problems. Learn how to design for users.",
      link: "https://www.youtube.com/watch?v=_QEc9z0q5kU",
    },
    {
      name: "Python for Beginners",
      tip: "Great starting point for automation, AI, and backend.",
      link: "https://www.youtube.com/watch?v=rfscVS0vtbw",
    },
    {
      name: "Web3 & Blockchain",
      tip: "The next big thing! Learn the basics of decentralized apps.",
      link: "https://www.youtube.com/watch?v=gyMwXuJrbJQ",
    },
  ];

  function generateSkill() {
    const random = skills[Math.floor(Math.random() * skills.length)];
    document.getElementById("skillName").innerText = random.name;
    document.getElementById("tip").innerText = random.tip;
    document.getElementById(
      "resource"
    ).innerHTML = `<a href="${random.link}" target="_blank" class="btn btn-outline-light">Watch Intro Video</a>`;
  }
</script>
{% endblock %}
